@using AdminView.Resources

@using Microsoft.AspNet.Identity

<li>
    <div id="botonera-idioma" class="btn-group">
        <button id="btn-es" lang="es" class="btn btn-xs btn-default">ESP</button>
        <button id="btn-en" lang="en" class="btn btn-xs btn-default">ENG</button>
    </div>
</li>

@if (Request.IsAuthenticated)
{
        <li>
            @Html.ActionLink(@textos.Hi + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
        </li>
        <li><a href="/account/logoff">Cerrar sesión</a></li>
}
else
{
        <li>@Html.ActionLink(@textos.Login, "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
}


<script type="text/javascript">
  $(document).ready(function () {
    $("#botonera-idioma button").click(function () {
        window.location = "@Url.Action("idioma", "Home")?lang=" + $(this).attr("lang") + "&returnUrl=" + document.location;
    });
  });
</script>