@using AdminView.Resources

<script type="text/javascript">
    function getNumberOfRequests() {
        var r = '';
        $.ajax({
            url: '/request/countrequests/',
            data: "{ 'prefix': '" + 'hola' + "'}",
            dataType: "json",
            type: "POST",
            contentType: "application/json; charset=utf-8",
            success: function (data) {
                document.getElementById("demo").innerHTML=data+" nuevas solicitudes";
            },
            error: function (e) {
                document.getElementById("demo").innerHTML = "Fallo de conexión";
            },
            failure: function (f) {
                document.getElementById("demo").innerHTML = "Fallo de conexión";
            }
        });

        return r;
    };
</script>

