@using AdminView.Resources

<ul class="breadcrumb">
    <li>@Html.ActionLink(@textos.Sport, "Sports", "Sports")</li>
    <li>@Html.ActionLink((string)ViewBag.sport.Name, "TypeCompetition", "TypeCompetition", new { idSport = ViewBag.sport.Id }, null)</li>
</ul>

<table class="table table-striped">
    <tr>
        <th>
            Type
        </th>
    </tr>
    <tr>
        <td>
            @Html.ActionLink(@textos.National, "Country", "Country", new { idSport = ViewBag.sport.Id, typeCompetition = "National" }, null)
        </td>
    </tr>
    <tr>
        <td>
            @Html.ActionLink(@textos.International, "Country", "Country", new { idSport = ViewBag.sport.Id, typeCompetition="International" }, null)
        </td>
    </tr>
</table>
