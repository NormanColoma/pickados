@model PickadosGenNHibernate.EN.Pickados.SportEN
<div class="row">
    <div class="col-md-2">
        @Html.DropDownList("allSports", null, new { @class = "form-control", id = "allSports", required = "required" })
        @Html.DropDownList("allCountries", null, new { @class = "form-control", id = "allCountries", required = "required" })

    </div>
    <div class="col-md-6">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4>SportEN</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.Id)

                <div class="form-group">
                    @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Save" class="btn btn-default" />
                    </div>
                </div>
            </div>
            <table class="table table-striped">
                <tr>
                    <th>
                        Name
                    </th>
                    <th>
                        Place
                    </th>
                    <th>
                        Actions
                    </th>
                </tr>
                @foreach (var item in ViewBag.allCompetitionsBySport)
                {
                    <tr>
                        <td>
                            @item.Name
                        </td>
                        <td>
                            @item.Place
                        </td>
                        <td>
                            <input type="button" id="deleteCompet" value="Eliminar" onclick="deleteCompet(@(item.Id))" />
                        </td>
                    </tr>
                }
            </table>
        }

        <div>
            @Html.ActionLink("Back to List", "Index")
        </div>
    </div>
</div>

@section scripts {
    <script type="text/javascript">

    $(document).ready(function () {
        $("#allSports").change(function () {
            var url = $(this).val();
            if (url != null && url != '') {
                location.href = '@Url.Action("DetailsSport", "Sports")?id=' + url;
            }
        })

        $("#allCountries").change(function () {
                            var url = $(this).val();
                            var value = document.getElementById("allSports").value;
                            if (url != null && url != '') {
                                location.href = '@Url.Action("DetailsSportCountry", "Sports")?idSport=' + value + '&country=' + url;
                            }
                        });
    });
    </script>
}
