    <div class="form-group col-md-4">
        <input id="loginstat_btn" class="btn btn-default col-md-2" type="submit" value="Filtrar">
    </div>
</div>

<div id="loginstat">
    <div class="clearfix"></div>

    <div class="col-md-offset-2 col-md-8">
        @{Html.RenderAction("_loginstat", "stats");}
    </div>
</div>