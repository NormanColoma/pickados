        <label class="col-md-12" for="InitialDate">Fecha de inicio</label>
        <input class="form-control col-md-12" id="iDateStat" name="InitialDate" type="date" value="">
    </div>
    <div class="form-group col-md-4">
        <label class="col-md-12">Fecha de fin</label>
        <input class="form-control col-md-12" id="fDateStat" name="FinalDate" type="date" value="">
