<?xml version="1.0" encoding="utf-8" ?>
		<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
		                   assembly="PickadosGenNHibernate"
		                   namespace="PickadosGenNHibernate.EN.Pickados">
		    
		    
			
				
<joined-subclass name="MatchEN" extends="PickadosGenNHibernate.EN.Pickados.Event_EN" table="Match"> 
	<key>
    	
				<column name="id"/>
		
    	
   	</key>

			
					
					<property name="Stadium" type="string"> 
						<column name="stadium"  not-null="true"/>
					</property>
			
			
		  			
						<many-to-one name="Away" class="PickadosGenNHibernate.EN.Pickados.TeamEN" >	
								<column name="FK_id_idAway"/> 
						</many-to-one>
											 					
			
		  			
						<many-to-one name="Home" class="PickadosGenNHibernate.EN.Pickados.TeamEN" >	
								<column name="FK_id_idLocal"/> 
						</many-to-one>
											 					
			
					
					
					
		
 	  
		 </joined-subclass>
		  
		  <query name="MatchENReadAllHQL">from MatchEN</query>
		  <query name="MatchENgetMatchByCompetitionHQL"><![CDATA[select m FROM MatchEN as m INNER JOIN m.Competition as c where c.Id=:id]]></query>
		  <query name="MatchENgetMatchByLocalTeamHQL"><![CDATA[select m FROM MatchEN as m INNER JOIN m.Home as t where t.Id=:id]]></query>
		  <query name="MatchENgetMatchByVisistantTeamHQL"><![CDATA[select m FROM MatchEN as m INNER JOIN m.Away as t where t.Id=:id]]></query>
		</hibernate-mapping>
	