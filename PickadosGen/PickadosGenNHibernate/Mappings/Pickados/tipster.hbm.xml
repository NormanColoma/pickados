<?xml version="1.0" encoding="utf-8" ?>
		<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
		                   assembly="PickadosGenNHibernate"
		                   namespace="PickadosGenNHibernate.EN.Pickados">
		    
		    
			
				
<joined-subclass name="TipsterEN" extends="PickadosGenNHibernate.EN.Pickados.UsuarioEN" table="Tipster"> 
	<key>
    	
				<column name="id"/>
		
    	
   	</key>

			
					
					<property name="Premium" type="boolean"> 
						<column name="premium"  not-null="true"/>
					</property>
					<property name="Subscription_fee" type="double"> 
						<column name="subscription_fee"  not-null="true"/>
					</property>
			
			
		  			
						<bag name="MonthlyStats" cascade="delete">
							<key>
							
								
								<column name="FK_id_idTipster"/>
					      	</key>
							<one-to-many class="PickadosGenNHibernate.EN.Pickados.StatsEN"/>
					    </bag>
					
			
		  			
						<bag name="Post" cascade="delete">
							<key>
							
								
								<column name="FK_id_idTipster"/>
					      	</key>
							<one-to-many class="PickadosGenNHibernate.EN.Pickados.PostEN"/>
					    </bag>
					
			
		  			
						<bag name="Follow_to" table="[tipster_tipster_0]" inverse="true" >
							<key>
								
									<column name="FK_id_idTipster"/> 
							</key>
      						<many-to-many class="PickadosGenNHibernate.EN.Pickados.TipsterEN">
									<column name="FK_id_idTipster_0"/> 
      						</many-to-many>
    					</bag>
			
		  			
						<bag name="Followed_by" table="[tipster_tipster_0]"  >
							<key>
								
									<column name="FK_id_idTipster_0"/> 
							</key>
      						<many-to-many class="PickadosGenNHibernate.EN.Pickados.TipsterEN">
									<column name="FK_id_idTipster"/> 
      						</many-to-many>
    					</bag>
			
			
					
					
					
					
					
					
		
 	  
		 </joined-subclass>
		  
		  <query name="TipsterENReadAllHQL">from TipsterEN</query>
		  <query name="TipsterENgetFollowersHQL"><![CDATA[select t1 FROM TipsterEN as t INNER JOIN t.Followed_by as t1 where t.Id=:id]]></query>
		  <query name="TipsterENgetPostsHQL"><![CDATA[SELECT post FROM PostEN as post, TipsterEN as tipster WHERE post.Tipster.Id = tipster.Id ]]></query>
		  <query name="TipsterENgetFollowsHQL"><![CDATA[select t1 FROM TipsterEN as t INNER JOIN t.Follow_to as t1 where t.Id=:id]]></query>
		  <query name="TipsterENgetTipstersWithBenefitHQL"><![CDATA[FROM TipsterEN]]></query>
		  <query name="TipsterENgetStatsByMonthHQL"><![CDATA[select s FROM StatsEN as s INNER JOIN s.Tipster as t where t.Id = :p_oid and month(s.InitialDate) = month(:p_date)]]></query>
		  <query name="TipsterENgetTipstersPremiumHQL"><![CDATA[FROM TipsterEN where Premium=true]]></query>
		  <query name="TipsterENfindByUserHQL"><![CDATA[select t FROM TipsterEN as t where alias = :alias]]></query>
		  <query name="TipsterENfindByMailHQL"><![CDATA[select t FROM TipsterEN as t where email = :email]]></query>
		  <query name="TipsterENfindByNIFHQL"><![CDATA[select t FROM TipsterEN as t where nif= :nif]]></query>
		  <query name="TipsterENgetTipstersFreeHQL"><![CDATA[FROM TipsterEN where Premium=false]]></query>
		</hibernate-mapping>
	