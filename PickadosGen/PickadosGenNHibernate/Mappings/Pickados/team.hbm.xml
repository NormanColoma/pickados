<?xml version="1.0" encoding="utf-8" ?>
		<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
		                   assembly="PickadosGenNHibernate"
		                   namespace="PickadosGenNHibernate.EN.Pickados">
		    
		    
			
				<class name="TeamEN" table="Team"> 
				  	
						<id name="Id" column="id" type="integer"> 
							<generator class="hilo"/>
						</id>
			
					
					<property name="Name" type="string"> 
						<column name="name"  unique="true" not-null="true"/>
					</property>
					<property name="Country" type="string"> 
						<column name="country"  not-null="true"/>
					</property>
					<property name="Club" type="boolean"> 
						<column name="club"  not-null="true"/>
					</property>
			
			
			
			
			
		  			
						<bag name="Event_home" >
							<key>
							
								
								<column name="FK_id_idLocal"/>
					      	</key>
							<one-to-many class="PickadosGenNHibernate.EN.Pickados.MatchEN"/>
					    </bag>
					
			
		  			
						<bag name="Event_away" >
							<key>
							
								
								<column name="FK_id_idAway"/>
					      	</key>
							<one-to-many class="PickadosGenNHibernate.EN.Pickados.MatchEN"/>
					    </bag>
					
			
		  			
						<bag name="Club_player" >
							<key>
							
								
								<column name="FK_id_idClub_team"/>
					      	</key>
							<one-to-many class="PickadosGenNHibernate.EN.Pickados.PlayerEN"/>
					    </bag>
					
			
		  			
						<bag name="National_player" >
							<key>
							
								
								<column name="FK_id_idNational_team"/>
					      	</key>
							<one-to-many class="PickadosGenNHibernate.EN.Pickados.PlayerEN"/>
					    </bag>
					
			
		  			
						<bag name="Competition" table="[competition_team]" inverse="true" >
							<key>
								
									<column name="FK_id_idTeam"/> 
							</key>
      						<many-to-many class="PickadosGenNHibernate.EN.Pickados.CompetitionEN">
									<column name="FK_id_idCompetition"/> 
      						</many-to-many>
    					</bag>
			
					
					
					
					
					
					
					
					
					
		
		 </class>	
		  
		  <query name="TeamENReadAllHQL">from TeamEN</query>
		  <query name="TeamENgetClubTeamsByPlayerHQL"><![CDATA[select t FROM TeamEN as t INNER JOIN t.Club_player as p where p.Id=:id]]></query>
		  <query name="TeamENgetNationalTeamsByPlayerHQL"><![CDATA[select t FROM TeamEN as t INNER JOIN t.Club_player as p where p.Id=:id]]></query>
		  <query name="TeamENgetTeamByCompetitionHQL"><![CDATA[select t FROM TeamEN as t INNER JOIN t.Competition as c where c.Id=:id]]></query>
		  <query name="TeamENgetNationalTeamsHQL"><![CDATA[FROM TeamEN as t where t.Club = true]]></query>
		  <query name="TeamENGetInternationalTeamHQL"><![CDATA[FROM TeamEN as t where t.Club = false]]></query>
		</hibernate-mapping>
	