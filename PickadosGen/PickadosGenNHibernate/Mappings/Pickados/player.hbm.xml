<?xml version="1.0" encoding="utf-8" ?>
		<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
		                   assembly="PickadosGenNHibernate"
		                   namespace="PickadosGenNHibernate.EN.Pickados">
		    
		    
			
				<class name="PlayerEN" table="Player"> 
				  	
						<id name="Id" column="idPlayer" type="integer"> 
							<generator class="hilo"/>
						</id>
			
					
					<property name="Name" type="string"> 
						<column name="name"  not-null="true"/>
					</property>
			
			
		  			
						<many-to-one name="Club_team" class="PickadosGenNHibernate.EN.Pickados.TeamEN" >	
								<column name="FK_id_idClub_team"/> 
						</many-to-one>
											 					
			
		  			
						<many-to-one name="National_team" class="PickadosGenNHibernate.EN.Pickados.TeamEN" >	
								<column name="FK_id_idNational_team"/> 
						</many-to-one>
											 					
			
			
			
		  			
						<bag name="Scorer" >
							<key>
							
								
								<column name="FK_idPlayer_idPlayer"/>
					      	</key>
							<one-to-many class="PickadosGenNHibernate.EN.Pickados.ScorerEN"/>
					    </bag>
					
			
		  			
						<many-to-one name="Sport" class="PickadosGenNHibernate.EN.Pickados.SportEN" >	
								<column name="FK_idSport_idSport"/> 
						</many-to-one>
											 					
					
					
					
					
					
					
		
		 </class>	
		  
		  <query name="PlayerENReadAllHQL">from PlayerEN</query>
		  <query name="PlayerENgetPlayersByClubTeamHQL"><![CDATA[SELECT p FROM PlayerEN as p INNER JOIN p.Club_team as t WHERE t.Name = :p_ClubTeam_Name]]></query>
		  <query name="PlayerENgetPlayersByNationalTeamHQL"><![CDATA[SELECT p FROM PlayerEN as p INNER JOIN p.National_team as t WHERE t.Name = :p_NationalTeam_Name]]></query>
		  <query name="PlayerENgetPlayersNoClubTeamHQL"><![CDATA[select p FROM PlayerEN as p LEFT JOIN p.Club_team as t INNER JOIN p.Sport as s where t is null AND s.Id = :id]]></query>
		  <query name="PlayerENgetPlayersNoNationalTeamHQL"><![CDATA[select p FROM PlayerEN as p LEFT JOIN p.National_team as t INNER JOIN p.Sport as s where t is null AND s.Id =:id]]></query>
		</hibernate-mapping>
	