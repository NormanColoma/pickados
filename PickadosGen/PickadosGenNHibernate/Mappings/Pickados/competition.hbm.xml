<?xml version="1.0" encoding="utf-8" ?>
		<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
		                   assembly="PickadosGenNHibernate"
		                   namespace="PickadosGenNHibernate.EN.Pickados">
		    
		    
			
				<class name="CompetitionEN" table="Competition"> 
				  	
						<id name="Id" column="id" type="integer"> 
							<generator class="hilo"/>
						</id>
			
					
					<property name="Name" type="string"> 
						<column name="name"  unique="true" not-null="true"/>
					</property>
					<property name="Place" type="string"> 
						<column name="place"  not-null="true"/>
					</property>
					<property name="Clubs" type="boolean"> 
						<column name="clubs"  not-null="true"/>
					</property>
			
			
			
			
		  			
						<bag name="Event_" cascade="delete">
							<key>
							
								
								<column name="FK_id_idCompetition"/>
					      	</key>
							<one-to-many class="PickadosGenNHibernate.EN.Pickados.Event_EN"/>
					    </bag>
					
			
		  			
						<many-to-one name="Sport" class="PickadosGenNHibernate.EN.Pickados.SportEN" >	
								<column name="FK_idSport_idSport"/> 
						</many-to-one>
											 					
			
			
		  			
						<bag name="Team" table="[competition_team]"  >
							<key>
								
									<column name="FK_id_idCompetition"/> 
							</key>
      						<many-to-many class="PickadosGenNHibernate.EN.Pickados.TeamEN">
									<column name="FK_id_idTeam"/> 
      						</many-to-many>
    					</bag>
			
			
		  			
						<bag name="Season" >
							<key>
							
								
								<column name="FK_id_idCompetition"/>
					      	</key>
							<one-to-many class="PickadosGenNHibernate.EN.Pickados.SeasonEN"/>
					    </bag>
					
					
					
					
					
					
					
					
					
		
		 </class>	
		  
		  <query name="CompetitionENReadAllHQL">from CompetitionEN</query>
		  <query name="CompetitionENgetCompetitionsByPlaceHQL"><![CDATA[FROM CompetitionEN WHERE Place = :place]]></query>
		  <query name="CompetitionENgetCompetitionByTeamHQL"><![CDATA[select c FROM CompetitionEN as c INNER JOIN c.Team as t where t.Id=:id]]></query>
		  <query name="CompetitionENgetCompetitionBySportHQL"><![CDATA[select c FROM CompetitionEN as c INNER JOIN c.Sport as s where s.Id=:id]]></query>
		  <query name="CompetitionENgetPlacesHQL"><![CDATA[select DISTINCT(c.Place) FROM CompetitionEN as c]]></query>
		  <query name="CompetitionENgetClubCompetitionHQL"><![CDATA[FROM CompetitionEN as c where c.Clubs=true]]></query>
		  <query name="CompetitionENgetNationalCompetitionHQL"><![CDATA[FROM CompetitionEN as c where c.Clubs = false]]></query>
		  <query name="CompetitionENgetClubPlacesHQL"><![CDATA[select DISTINCT(c.Place) FROM CompetitionEN as c where c.Clubs=true]]></query>
		  <query name="CompetitionENgetNationalPlacesHQL"><![CDATA[select DISTINCT(c.Place) FROM CompetitionEN as c where c.Clubs=false]]></query>
		</hibernate-mapping>
	