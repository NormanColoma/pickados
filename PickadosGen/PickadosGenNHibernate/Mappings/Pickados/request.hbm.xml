<?xml version="1.0" encoding="utf-8" ?>
		<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
		                   assembly="PickadosGenNHibernate"
		                   namespace="PickadosGenNHibernate.EN.Pickados">
		    
		    
			
				<class name="RequestEN" table="Request"> 
				  	
						<id name="Id" column="idRequest" type="integer"> 
							<generator class="hilo"/>
						</id>
			
					
					<property name="Type" > 
						<column name="type"  not-null="true"/>
					</property>
					<property name="Reason" type="string"> 
						<column name="reason"  not-null="true"/>
					</property>
					<property name="State" > 
						<column name="state"  not-null="true"/>
					</property>
					<property name="Date" type="date"> 
						<column name="date"  not-null="true"/>
					</property>
					<property name="AdminComment" type="string"> 
						<column name="adminComment"  not-null="true"/>
					</property>
					<property name="ChangeDate" type="date"> 
						<column name="changeDate"  not-null="true"/>
					</property>
			
			
		  			
						<many-to-one name="Post" class="PickadosGenNHibernate.EN.Pickados.PostEN" lazy="false">	
								<column name="FK_id_idPost"/> 
						</many-to-one>
											 					
			
			
			
			
			
			
			
					
					
					
					
					
					
					
					
		
		 </class>	
		  
		  <query name="RequestENReadAllHQL">from RequestEN</query>
		  <query name="RequestENgetByStateHQL"><![CDATA[FROM RequestEN  where state = :p_state]]></query>
		</hibernate-mapping>
	