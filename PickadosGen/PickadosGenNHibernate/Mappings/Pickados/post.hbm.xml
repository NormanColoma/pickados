<?xml version="1.0" encoding="utf-8" ?>
		<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
		                   assembly="PickadosGenNHibernate"
		                   namespace="PickadosGenNHibernate.EN.Pickados">
		    
		    
			
				<class name="PostEN" table="Post"> 
				  	
						<id name="Id" column="id" type="integer"> 
							<generator class="hilo"/>
						</id>
			
					
					<property name="Created_at" type="timestamp"> 
						<column name="created_at"  not-null="true"/>
					</property>
					<property name="Modified_at" type="timestamp"> 
						<column name="modified_at"  not-null="true"/>
					</property>
					<property name="Stake" type="double"> 
						<column name="stake"  not-null="true"/>
					</property>
					<property name="Description" type="string"> 
						<column name="description"  not-null="true"/>
					</property>
					<property name="Private_" type="boolean"> 
						<column name="private"  not-null="true"/>
					</property>
					<property name="TotalOdd" type="double"> 
						<column name="totalOdd"  not-null="true"/>
					</property>
					<property name="PostResult" > 
						<column name="postResult"  not-null="true"/>
					</property>
					<property name="Likeit" type="integer"> 
						<column name="likeit"  not-null="true"/>
					</property>
					<property name="Report" type="integer"> 
						<column name="report"  not-null="true"/>
					</property>
			
			
			
			
			
			
			
			
		  			
						<bag name="Pick" table="[pick_post]" inverse="true" >
							<key>
								
									<column name="FK_id_idPost"/> 
							</key>
      						<many-to-many class="PickadosGenNHibernate.EN.Pickados.PickEN">
									<column name="FK_id_idPick"/> 
      						</many-to-many>
    					</bag>
			
		  			
						<many-to-one name="Tipster" class="PickadosGenNHibernate.EN.Pickados.TipsterEN" >	
								<column name="FK_id_idTipster"/> 
						</many-to-one>
											 					
			
			
			
		  			
						<bag name="Request" >
							<key>
							
								
								<column name="FK_id_idPost"/>
					      	</key>
							<one-to-many class="PickadosGenNHibernate.EN.Pickados.RequestEN"/>
					    </bag>
					
			
			
					
					
					
					
					
					
					
					
					
					
					
					
					
		
		 </class>	
		  
		  <query name="PostENReadAllHQL">from PostEN</query>
		  <query name="PostENfindPostsByTipsterHQL"><![CDATA[select p FROM PostEN as p INNER JOIN p.Tipster t where t.Id = :id]]></query>
		  <query name="PostENgetByResultHQL"><![CDATA[FROM PostEN  where postResult = :p_postResult]]></query>
		  <query name="PostENgetPostsBetweenDateHQL"><![CDATA[FROM PostEN WHERE created_at BETWEEN :initialDate and :finalDate OR modified_at BETWEEN :initialDate and :finalDate]]></query>
		  <query name="PostENgetMoreVotedHQL"><![CDATA[FROM PostEN WHERE created_at BETWEEN :initialDate and :finalDate OR modified_at BETWEEN :initialDate and :finalDate ORDER BY likeit DESC]]></query>
		</hibernate-mapping>
	